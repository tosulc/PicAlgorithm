<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_odaberi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Choose a picture" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_label_sirina_slike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:text="Width:" />

    <TextView
        android:id="@+id/tv_sirina_slike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_label_sirina_slike"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_label_sirina_slike" />

    <TextView
        android:id="@+id/tv_label_visina_slike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_label_sirina_slike"
        android:text="Height:" />

    <TextView
        android:id="@+id/tv_visina_slike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_label_visina_slike"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_label_visina_slike" />

    <TextView
        android:id="@+id/tv_label_broj_piksela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_label_visina_slike"
        android:text="Pixel number:" />

    <TextView
        android:id="@+id/tv_broj_piksela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_label_broj_piksela"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_label_broj_piksela" />

    <TextView
        android:id="@+id/tv_label_broj_piksela_pogodak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_label_broj_piksela"
        android:text="Matched pixels:" />

    <TextView
        android:id="@+id/tv_broj_piksela_pogodak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_label_broj_piksela_pogodak"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_label_broj_piksela_pogodak" />
    
    <TextView
        android:id="@+id/tv_label_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_label_broj_piksela_pogodak"
        android:text="Status: " />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_label_status"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_label_status" 
        />
    
    

</RelativeLayout>